datasource db { 
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client { 
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  sessions  Session[]
  createdAt DateTime  @default(now())
}

model Session {
  id          String   @id @default(cuid())
  userId      String
  subject     String
  category    String?
  startedAt   DateTime
  endedAt     DateTime
  durationMin Int
  notes       String?
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
}
